<div class="navbar border">
  <%= link_to 'Wikinimous', articles_path, class:"logo" %>
  <%= link_to 'New article', new_article_path, class:"link" %>
</div>

<div class="container text-center">
  <ul>
  <% @articles.each do |article| %>
    <li>
      <%= link_to article.title, article_path(article), class: 'link' %>
      <%= link_to "Delete",
              article_path(article),
              method: :delete,
              data: { confirm: "Are you sure you want to delete #{article.title} ?" } %></li>
    </li>
    <% end %>
  </ul>
</div>
